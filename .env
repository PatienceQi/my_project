# 政策法规RAG问答系统环境配置

# Neo4j数据库配置
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=newpassword

# 远程Ollama服务配置
LLM_BINDING=ollama
LLM_MODEL=llama3.2:latest
LLM_BINDING_HOST=http://120.232.79.82:11434

# 关键修复：防止ollama客户端启动本地服务
OLLAMA_HOST=http://120.232.79.82:11434
OLLAMA_BASE_URL=http://120.232.79.82:11434
OLLAMA_NO_SERVE=1
OLLAMA_ORIGINS=*

# GraphRAG嵌入模型配置（使用远程Ollama的bge-m3）
EMBEDDING_MODEL=bge-m3:latest

# 向量数据库配置
CHROMA_PERSIST_DIR=./data/chroma_db
CHUNK_SIZE=512
CHUNK_OVERLAP=50
VECTOR_RETRIEVAL_TOP_K=5

# 图谱查询配置
GRAPH_RETRIEVAL_TOP_K=5
CONFIDENCE_THRESHOLD=0.4

# 系统配置
EXPERIMENT_MODE=true
ENVIRONMENT=development